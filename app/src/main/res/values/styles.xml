<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="AppTheme.Base">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/app_main_bg</item>
        <item name="colorPrimaryDark">@color/app_main_bg</item>
        <item name="colorAccent">@color/app_main_bg</item>
    </style>

    <style name="AppTheme.Base" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="windowActionBar">false</item>
        <!-- 使用 API Level 22 編譯的話，要拿掉前綴字 -->
        <item name="windowNoTitle">true</item>
        <item name="android:actionBarSize">@dimen/toolbar_size</item>
        <item name="android:actionMenuTextColor">@color/font_black666</item>
        <item name="actionMenuTextColor">@color/font_black666</item>
        <!-- Actionbar color -->
        <item name="colorPrimary">@color/app_main_bg</item>
        <!--Status bar color-->
        <item name="colorPrimaryDark">@color/app_main_bg</item>
        <!--对应EditText编辑时、RadioButton选中、CheckBox等选中时的颜色-->
        <item name="colorAccent">@color/app_main_bg</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <!--分割线-->
    <style name="divier_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.5dp</item>
        <item name="android:background">@color/divier_color</item>
    </style>

    <!--分割线1-->
    <style name="divier_style1">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.5dp</item>
        <item name="android:background">@color/divier_color1</item>
    </style>

    <!--分割线2-->
    <style name="divier_style2">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.5dp</item>
        <item name="android:background">@color/divier_color2</item>
    </style>

    <!--分割线3-->
    <style name="divier_style3">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.5dp</item>
        <item name="android:background">@color/divier_color3</item>
    </style>

    <!--分割线4-->
    <style name="divier_style4">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.5dp</item>
        <item name="android:background">@color/divier_color4</item>
    </style>

    <!-- 自定义CheckBox和RadioButton中文字和图片之间距离问题解决  -->
    <style name="package_radio_style">
        <item name="android:layout_gravity"> center_vertical</item>
        <item name="android:button">@null</item>
        <item name="android:padding">0dp</item>
        <item name="android:background">@null</item>
        <item name="android:drawableLeft">@drawable/radio_button_style</item>
        <item name="android:drawablePadding">6dp</item>
    </style>

</resources>
