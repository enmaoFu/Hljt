<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_bg">

    <RelativeLayout
        android:id="@+id/d"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:background="#401c3d6f"></RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="#401c3d6f"
        android:id="@+id/relativeLayout"
        android:layout_below="@+id/d">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/login_title"
            android:layout_centerInParent="true"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="230dp"
        android:layout_height="240dp"
        android:background="@drawable/login_dikuan"
        android:layout_marginTop="111dp"
        android:layout_below="@+id/relativeLayout"
        android:layout_centerHorizontal="true">

        <LinearLayout
            android:id="@+id/username"
            android:layout_width="157dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="账户："
                android:textSize="14sp"
                android:textColor="@color/app_text_b"/>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/login_input"
                android:paddingRight="5dp">

                <ImageView
                    android:id="@+id/zhiwen1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/login_zhiwen"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:visibility="gone"/>

                <EditText
                    android:id="@+id/input_user"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_marginTop="2dp"
                    android:hint="用户名"
                    android:textColorHint="#b2b5ba"
                    android:textColor="@color/app_text_bh"
                    android:textSize="12sp"
                    android:padding="5dp"
                    android:textCursorDrawable="@null"
                    android:layout_toLeftOf="@+id/zhiwen1"
                    android:maxLength="8"/>

            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/pwd"
            android:layout_width="157dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/username"
            android:layout_marginTop="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="密码："
                android:textSize="14sp"
                android:textColor="@color/app_text_b"/>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/login_input"
                android:paddingRight="5dp">

                <ImageView
                    android:id="@+id/zhiwen"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/login_zhiwen"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"/>

                <EditText
                    android:id="@+id/input_pwd"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_marginTop="2dp"
                    android:hint="密码"
                    android:textColorHint="#b2b5ba"
                    android:textColor="@color/app_text_bh"
                    android:textSize="12sp"
                    android:padding="5dp"
                    android:textCursorDrawable="@null"
                    android:layout_toLeftOf="@+id/zhiwen"
                    android:inputType="textPassword"
                    android:maxLength="8"/>

            </RelativeLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/login_but"
            android:layout_width="157dp"
            android:layout_height="wrap_content"
            android:background="@drawable/login_but"
            android:layout_below="@+id/pwd"
            android:layout_marginTop="25dp"
            android:layout_centerHorizontal="true"
            android:text="登录"
            android:textColor="#eee7e7"
            android:gravity="center"
            android:textSize="12sp"/>

    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="重庆消防  V1.1"
        android:textColor="@color/app_text_bh"
        android:textSize="14sp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="55dp"/>

</RelativeLayout>